<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:layout_weight="1"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="100dp"
        android:src="@drawable/i32"
        android:scaleType="fitCenter"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="0dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/grey"
                android:id="@+id/HappyButton"
                android:layout_marginHorizontal="5dp"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sad"
                android:layout_marginHorizontal="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/grey"
                android:id="@+id/SadButton"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angry"
                android:layout_marginHorizontal="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/grey"
                android:id="@+id/AngryButton"
                android:textAllCaps="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surprise"
                android:layout_marginHorizontal="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/grey"
                android:id="@+id/SurpriseButton"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fear"
                android:layout_marginHorizontal="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/grey"
                android:id="@+id/FearButton"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disgust"
                android:layout_marginHorizontal="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/grey"
                android:id="@+id/DisgustButton"
                android:textAllCaps="false"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:paddingHorizontal="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not confident"
                android:id="@+id/confidence1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderately Confident"
                android:id="@+id/confidence2"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almost Sure"
                android:id="@+id/confidence3"/>

        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="page: 1/12"
            android:id="@+id/page"
            android:layout_gravity="bottom"
            android:layout_marginVertical="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/done"
            android:text="done"
            android:visibility="gone"/>



    </LinearLayout>




</LinearLayout>